

{% extends 'templates/app.twig' %}

{% block content %}
 <div class="row">
 	<div class="col-md-6 col-md-offset-3">
 		<div class="panel panel-default panel-sing">
          <div class="panel-heading heading-signin">Sign In</div>
          <div class="panel-body">
           <form method="post" action="{{ path_for('userSignIn') }}">
           <div class="form-group">
             <label for="username">User Name</label>
             <input type="text" name="username" id="username" placeholder="Your User Name" class="form-control" />
           </div>

           <div class="form-group">
             <label for="password">Password</label>
             <input type="password" name="password" id="password" placeholder="Your Password" class="form-control" />
           </div>

           <button type="submit" class="btn btn-default submit-button">Sign In</button>
           </form>
          </div>
 		</div>
 	</div> 
 </div>
{% endblock %}