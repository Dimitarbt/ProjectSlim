

{% extends 'templates/app.twig' %}

{% block content %}
 <div class="row">
 	<div class="col-md-6 col-md-offset-3">
 		<div class="panel panel-default panel-sing">
          <div class="panel-heading">Sign Up</div>
          <div class="panel-body">
           <form method="post" action="{{ path_for('userSignUp') }}">
           <div class="form-group {{errors.username ? 'has-error' : '' }}">
             <label for="username">User Name</label>
             <input type="text" name="username" id="username" placeholder="Your User Name" class="form-control" />

             {% if(errors.username )%}
             <span class="help-block">{{ errors.username | first }}</span>
             {% endif %}

           </div>

           <div class="form-group {{ errors.password ? 'has-error' : '' }} ">
             <label for="password">Password</label>
             <input type="password" name="password" id="password" placeholder="Your Password" class="form-control" /> 

             {% if(errors.password) %}
             <span class="help-block">{{ errors.password | first }}</span>
             {% endif %}

           </div>

           <button type="submit" class="btn btn-default submit-button">Sign Up</button>
           </form>
          </div>
 		</div>
 	</div> 
 </div>
{% endblock %}